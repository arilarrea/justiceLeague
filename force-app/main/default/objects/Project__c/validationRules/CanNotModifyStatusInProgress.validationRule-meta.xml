<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CanNotModifyStatusInProgress</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(PRIORVALUE(Status__c),&apos;In Progress&apos;) &amp;&amp; NOT(ISPICKVAL(Status__c, &apos;Completed&apos;) )</errorConditionFormula>
    <errorMessage>You can not modify a project In Progress stage</errorMessage>
</ValidationRule>
